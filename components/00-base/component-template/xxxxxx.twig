{%
  set classes = [
    'xxxxxx',
    variant and variant != 'default' ? 'xxxxxx--' ~ variant,
    modifier_class
  ]
%}

{% set attributes = attributes.addClass(classes) %}

<div{{ attributes }}>
  {{ title_prefix }}
    {% if title %}
      <h3{{ title_attributes }}>{{ title }}</h3>
    {% endif %}
  {{ title_suffix }}

  {% block content %}
    {{ content }}
  {% endblock %}
</div>
