{%
  set classes = [
  'aside',
    variant and variant != 'default' ? 'aside--' ~ variant,
  ]
%}

{% set attributes = attributes.addClass(classes) %}

<{{ html_tag|default('aside') }}{{attributes}}>
  <span class="aside__title h4">{{ title }}</span>
  <span class="aside__content">{{ content }}</span>
</{{ html_tag|default('aside') }}>
