{%
  set classes = [
  'figure',
    variant and variant != 'default' ? variant,
  ]
%}

{% set attributes = attributes.addClass(classes) %}

<figure{{attributes}}>
  <div class="figure__image">
    {{ figure_image }}
  </div>
  <figcaption class="figure__caption">
    {{ figure_caption }}
  </figcaption>
</figure>
